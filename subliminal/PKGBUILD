# Maintainer: Julien Nicoulaud <julien.nicoulaud@gmail.com>
# Source: https://github.com/nicoulaj/archlinux-packages
pkgname=subliminal
pkgver=0.5.1
pkgrel=1
pkgdesc="Search and download subtitles."
arch=(any)
url="https://github.com/Diaoul/subliminal"
license=(LGPL)
depends=('python2' 'python-beautifulsoup>=3.2.0' 'python-guessit>=0.2' 'python2-requests>=0.8.1' 'python2-enzyme')
makedepends=('python2-distribute')
changelog=Changelog
conflicts=(subliminal-git)
source=("http://pypi.python.org/packages/source/s/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('557601e3b0b3df07d331892e249cbb8d')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
